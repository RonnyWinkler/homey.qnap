{
  "id": "nas",
  "name": {
    "en": "QNAP NAS",
    "de": "QNAP-NAS"
  },
  "class": "other",
  "platforms": ["local"],
  "connectivity": ["lan"],
  "capabilities": [
    "measure_nas_last_update",
    "measure_nas_model_name",

    "measure_nas_cpu_usage",
    "measure_nas_mem_usage",

    "measure_nas_mem_used",
    "measure_nas_mem_free",
    "measure_nas_mem_total",
    "measure_nas_fan_speed",

    "measure_nas_cpu_temp",
    "measure_nas_sys_temp",
    "alarm_cpu_temp",
    "alarm_sys_temp",

    "measure_nas_firmware",
    "measure_nas_firmware_build_time",
    "measure_nas_firmware_new_version",
    "measure_nas_uptime",

    "measure_nas_temp_warn_cpu",
    "measure_nas_temp_error_cpu",
    "measure_nas_temp_warn_sys",
    "measure_nas_temp_error_sys",
    "measure_nas_temp_warn_hdd",
    "measure_nas_temp_error_hdd",
    "measure_nas_temp_warn_ssd",
    "measure_nas_temp_error_ssd",

    "button.wake_on_lan"
  ],
  "defaultCapabilities": [
    "measure_nas_cpu_usage"
  ],
  "capabilitiesOptions": {
    "button.wake_on_lan": {
      "maintenanceAction": true,
      "title": {
         "en": "Wake-on-lan",
         "de": "Wake-on-LAN"
      },
      "desc": {
         "en": "Send wake-on-lan request.",
         "de": "Sende Wake-on-LAN-Anforderung."
      }
    }
  },
  "settings": [
    {
      "id": "scan_interval",
      "type": "number",
      "value": 5,
      "label": {
        "en": "Scan interval",
        "de": "Abfrageintervall"
      },
      "hint": {
        "en": "Scan interval for NAS device data in minutes.",
        "de": "Abfrageintervall für NAS-Gerätedaten in Minuten."
      },
      "units": "min"
    }
  ],
  "pair": [
    {
      "id": "nas_data",
      "navigation": {
        "next": "login"
      }
    },
    {
      "id": "login",
      "template": "login_credentials",
      "options": {
        "usernameLabel": { 
          "en": "User",
          "de": "Benutzer" 
        },
        "usernamePlaceholder": { 
          "en": "user",
          "de": "Benutzer"
        },
        "passwordLabel": { 
          "en": "Password",
          "de": "Passwort" 
        },
        "passwordPlaceholder": { 
          "en": "Password",
          "de": "Passwort" 
        }
      },
      "navigation": {
          "prev": "nas_data"
      }
    },
    {
      "id": "loading",
      "template": "loading"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
          "next": "add_devices",
          "prev": "login"
      },
      "options": { "singular": true }
    },
    {
        "id": "add_devices",
        "template": "add_devices"
    }
  ],
  "repair": [
    {
      "id": "nas_data",
      "navigation": {
        "next": "login"
      }
    },
    {
      "id": "login",
      "template": "login_credentials",
      "options": {
        "usernameLabel": { 
          "en": "User",
          "de": "Benutzer" 
        },
        "usernamePlaceholder": { 
          "en": "user",
          "de": "Benutzer"
        },
        "passwordLabel": { 
          "en": "Password",
          "de": "Passwort" 
        },
        "passwordPlaceholder": { 
          "en": "Password",
          "de": "Passwort" 
        }
      },
      "navigation": {
          "prev": "nas_data"
      }
    }
  ],
  "images": {
    "small": "/drivers/nas/assets/images/small.png",
    "large": "/drivers/nas/assets/images/large.png"
  }
}